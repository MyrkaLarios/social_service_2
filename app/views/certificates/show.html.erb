<div class="show-certificate-div mt-4">
  <h1> Constancia de nivel de ingl√©s </h1>
  <h2> Vista previa </h2>
  <%= render 'certificate' %>
  <div class="pdf-send-btn-div">
    <%= link_to 'Regresar', certificates_path, class: 'btn btn-primary my-3'%>
    <%= link_to 'Volver a imprimir', print_path(id: @certificate.id, format: :pdf), target: :_blank, class: 'btn btn-primary my-3' if @certificate.status %>
