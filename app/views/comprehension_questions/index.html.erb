<div class='container-fluid'>
  <div class='title'>
    <h2>Preguntas de comprensi√≥n lectora</h2>
    <div class='filters'>
      <%= collection_select(:editorial, :editorial_id, @editorials, :id, :name, {selected: @actual_editorial }) %>
      <div class="editorial-levels-dropdown-container">
        <%= collection_select(:level, :level_id, @actual_editorial.levels, :id, :number, {selected: @actual_editorial.levels.first }) %>
      </div>
      <%= simple_form_for @question, url: new_comprehension_question_path, method: :get, html: {class: "form container-filter"} do |f| %>
        <div class="level-units-dropdown-container">
          <%= f.input :unit_id, collection: @actual_editorial.levels.first.units, include_blank: false %>
        </div>
        <%= f.submit "Agregar pregunta", class: 'btn btn-outline-primary add-question' %>
      <% end %>
    </div>

  </div>
  <div class='questions-container'>
    <%= render partial: 'questions', locals: { questions: @questions } %>
  </div>

</div>
