<div class= 'title'>
  <h1>Pregunta #</h1>
  <p id="show">Nivel X Unidad X</p>
</div>
<div class="content-show">
  <%= image_tag (url_for(@question.file) if (@question.file.attached?)), style: "width: 40vw; " %>
  <p>Lectura: <%= @question.lecture %></p>
  <p>Pregunta: <%= @question.content %></p>

  <div class="cont-op">
    <% @question.options.each do |option| %>
      <p class="option<%= ' correct' if option.correct %>">Opci√≥n: <%= option.content %></p>
    <% end %>
  </div>
  <br>
  <div class="two-buttos-div">
    <%= link_to 'Regresar', comprehension_questions_path, class: 'btn btn-outline-primary'%>
    <%= link_to 'Editar', edit_comprehension_question_path, class: 'btn btn-outline-primary'%>
  </div>
  <br>
</div>

