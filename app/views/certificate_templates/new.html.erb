<div class="new-template-div">
  <h1> Nueva plantilla para constancia </h1>
  <%= simple_form_for @template, url: {action: "create"} do |f|%>
    <%= f.input :name, label: "Nombre de la plantilla: " %>
    <%= f.input :header, as: :text, input_html: {rows: 2, cols: 40}, label: "Encabezado: " %>
    <%= f.label 'Ingresa las claves "#NOMBRE" y "#NIVEL" para elegir en donde se podrÃ¡n los datos del alumno' %> 
    <%= f.input :body, as: :text, input_html: {rows: 5, cols: 40}, label: "Cuerpo: " %>
    <%= f.input :footer, as: :text, input_html: {rows: 2, cols: 40}, label: "Cierre: " %>
    <div class="two-buttos-div">
      <%= link_to 'Regresar', certificate_templates_path, class: 'btn btn-primary mt-5'%>
      <%= f.submit "Guardar", class: "btn btn-primary mt-5"%>
    </div>
  <% end %>
</div>
