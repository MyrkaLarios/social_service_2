<h1>EXAMEN</h1>
<div class= "show-exam">
  <h5>Datos del alumno</h5>
  <%= simple_form_for @exam, url: {action: "create"} do |f| %>
    <%= f.input :level_id, as: :hidden, input_html: { value: @level } %>
    <%= f.input :period_id, as: :hidden, input_html: { value: @actual_period } %>
    <%= f.input :student_id, as: :hidden, input_html: { value: @student.id } %>
    <p> NÃºmero de control: <%= @student.no_control %> </p>
    <p> Nombre: <%= @student.name %> </p>
    <p> E-mail: <%= @student.email %> </p>
    <ul>
    <% @questions.each do |question| %>
      <li>
        <%= question.content %>
        <div class= "question-options">
        <ul class= "option">
          <% MultipleQuestionOption.where(multiple_question_id: question.id).each do |option| %>
            <li> <%= option.content %> </li>
          <% end %>
        </ul>
        </div>
      </li>
    <% end %>
    </ul>
    <%= f.submit "Guardar", class: "btn btn-outline-primary"%>
  <% end %>
</div>