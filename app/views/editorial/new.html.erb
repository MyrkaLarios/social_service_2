<div class="row">
  <div class="col">
  <h1 class="my-4">Guardar una nueva editorial</h1>
    <%= simple_form_for @editorial, url: {action: "create"}, html: {class: "form d-flex flex-column align-items-center"} do |f| %>
      <%= f.input :id_editorial, class: 'form-control', label: 'Identificador' %>
      <%= f.input :name, class: 'form-control', label: 'Nombre' %>
      <br>
      <%= f.submit "Crear", class:'btn btn-primary'%>
      <%= link_to 'Regresar', editorial_index_path, class: 'btn btn-primary mt-5'%>
      <br>
    <% end %>
  </div>
</div>

